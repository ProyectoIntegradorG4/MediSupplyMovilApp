# ================================================
# Variables de Entorno para MediSupply App
# ================================================

# Entorno de desarrollo
EXPO_PUBLIC_STAGE=dev
EXPO_DEBUG=true

# =================================================
# API Gateway (AWS ALB - Application Load Balancer)
# =================================================
# IMPORTANTE: Todas las peticiones pasan por el API Gateway (AWS ALB)
# El gateway enruta a los microservicios según el path:
#   /api/v1/auth/*       → auth-service:8004
#   /api/v1/users/*      → user-service:8001
#   /api/v1/validate/*   → nit-validation-service:8002
#   /api/v1/audits/*     → audit-service:8003
#   /api/v1/clientes/*   → cliente-service:8013
#
# NOTA: El ALB de AWS usa puerto 80 por defecto (HTTP), no es necesario especificarlo
# Para desarrollo local, puedes cambiar estas URLs a tu IP local (ej: http://192.168.10.5:80)

# AWS - Gateway en ALB (puerto 80 por defecto, no requiere especificar puerto)
EXPO_PUBLIC_GATEWAY_URL=http://medisupply-alb-656658498.us-east-1.elb.amazonaws.com

# Android - AWS ALB
EXPO_PUBLIC_GATEWAY_URL_ANDROID=http://medisupply-alb-656658498.us-east-1.elb.amazonaws.com

# iOS - AWS ALB
EXPO_PUBLIC_GATEWAY_URL_IOS=http://medisupply-alb-656658498.us-east-1.elb.amazonaws.com

# =================================================
# URLs DEPRECADAS (Mantener por compatibilidad)
# =================================================
# Estas URLs ya no se usan, pero se mantienen para compatibilidad
# EXPO_PUBLIC_API_URL=http://192.168.5.107:8001
# EXPO_PUBLIC_AUTH_URL=http://192.168.5.107:8004

# Configuración de red para desarrollo
LOCAL_IP=192.168.5.107
GATEWAY_PORT=80

# Configuración de Expo
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
REACT_NATIVE_PACKAGER_HOSTNAME=192.168.5.107
EXPO_PACKAGER_HOST=192.168.5.107

# Deshabilitar validaciones en línea de Expo (útil para trabajar offline o con problemas de red)
EXPO_NO_UPDATE_CHECK=1
EXPO_NO_TELEMETRY=1
EXPO_OFFLINE=1

